body
  padding-bottom: 40px
  color: #5a5a5a
  width: 100%
  margin: 0

a
  display: inline-block

.sub-title
  font-size: 30px

.title
  margin: 0 auto
  padding: 0px 24px
  display: inline-block
  position: relative
  top: 268px
  h1
    font-size: 75px
    font-family: 'Quintessential', cursive
    color: #0085ff

@media (min-width: 768px)
  .title
    top: 100px
    padding: 0px 24px

  .title h1
    font-size: 200px

  .sub-title h2
    font-size: 50px

  .sub
    top: 400px


#photo-circles
  position: relative

#photo-circles .circle
  border: 1px solid black

.photo-circle-element
  background-size: cover
  background-repeat: no-repeat
  position: absolute
  background-position: 50%

#love-block
  padding: 50px

#love-block, .block-text
  font-size: 50px
  color: #7e1919
  font-weight: 800
  text-align: center

.block-text>p
  text-transform: uppercase
  text-align: left
  margin-left: 200px

.block-text>p:first-child
  margin: 0
  font-size: 70px
  position: fixed

.uppercase
  text-transform: uppercase

.contact
  width: 100px
  height: 100px
  display: inline
  fill: red

.reloadPhotos
  background: #6767BD
  width: 100px
  height: 39px
  border-style: none
  line-height: 12px
  border: 3px #553232 solid
  color: #C5EBF5

.photoModalBack
  position: fixed
  top: 0
  background: black
  width: 100%
  height: 100%
  opacity: 0.2

.photoModal
  border-radius: 11px
  background-repeat: no-repeat
  background-size: contain
  position: fixed


#map-view
  height: 180px